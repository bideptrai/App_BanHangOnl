<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/imgspgiohang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenspgiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten hang"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtGiagiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Gia"
            android:textColor="#040404"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:backgroundTint="#7A7272"
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:text="-"
                android:textColor="#000000"
                android:id="@+id/btntru"/>
            <Button
                android:backgroundTint="#fff"
                android:focusable="false"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:text="1"
                android:textColor="#9F8383"
                android:id="@+id/btnvalues"/>
            <Button
                android:backgroundTint="#736E6E"
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:text="+"
                android:textColor="#1B1B1B"
                android:id="@+id/btncong"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>